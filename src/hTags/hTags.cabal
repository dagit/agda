name: hTags
version: 0.1
cabal-version: >= 1.2 && < 2
author: Ulf Norell, Nils Anders Danielsson

executable hTags
  main-is:       Main.hs
  build-depends: ghc == 6.8.3,
                 base >= 3,
                 filepath >= 1.1 && < 2,
                 directory >= 1.0 && < 2,
                 process >= 1.0 && < 2,
                 containers >= 0.1 && < 1
  ghc-options:   -fwarn-incomplete-patterns -O

